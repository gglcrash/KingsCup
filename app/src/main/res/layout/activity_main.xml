<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_coordinator_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activities.MainActivity"
    >

    <LinearLayout
        android:id="@+id/main_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/background">

        <ImageView

            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_marginTop="@dimen/spacing_medial_24"
            android:background="@drawable/cup"/>

        <Button
            android:id="@+id/play_btn"
            android:text="Играть"
            android:layout_width="@dimen/button_size_width"
            android:layout_height="@dimen/button_size_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_medial_24"
            android:background="@drawable/button_main"

            />

        <Button
            android:id="@+id/rules_btn"
            android:text="Правила"
            android:layout_width="@dimen/button_size_width"
            android:layout_height="@dimen/button_size_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_medial_24"
            android:background="@drawable/button_main"
            />
        <Button
            android:id="@+id/fab_settings"
            android:text="Настройки"
            android:layout_width="@dimen/button_size_width"
            android:layout_height="@dimen/button_size_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_medial_24"
            android:background="@drawable/button_main"
            />
        <Button
            android:id="@+id/fab_quit"
            android:text="Выйти"
            android:layout_width="@dimen/button_size_width"
            android:layout_height="@dimen/button_size_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_medial_24"
            android:background="@drawable/button_main"
            />
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>